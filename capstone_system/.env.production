# ===========================================
# PRODUCTION ENVIRONMENT - HOSTINGER DEPLOYMENT
# ===========================================
# This configuration runs Laravel WITHOUT Python APIs
# Python services can be added later when ready
# ===========================================

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME="SHAReS System"
APP_ENV=production
APP_KEY=base64:YOUR_PRODUCTION_APP_KEY_GENERATE_NEW
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# ===========================================
# LOGGING
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ===========================================
# DATABASE CONFIGURATION (HOSTINGER)
# ===========================================
# Get these from Hostinger Control Panel > Databases
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=u123456789_capstone
DB_USERNAME=u123456789_dbuser
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE

# ===========================================
# SESSION & CACHE
# ===========================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===========================================
# EMAIL CONFIGURATION (Brevo SMTP)
# ===========================================
# Update with your actual Brevo credentials
MAIL_MAILER=smtp
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=your_brevo_username_here
MAIL_PASSWORD=your_brevo_password_here
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# AWS (Leave empty)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# ===========================================
# EXTERNAL API CONFIGURATION
# ===========================================
# PYTHON APIs DISABLED FOR NOW
# These features will return graceful errors until Python services are deployed
# Uncomment and update URLs when Python services are ready

# LLM API for AI Meal Plan Generation (DISABLED)
# LLM_API_URL=https://your-llm-api.onrender.com
# LLM_API_KEY=your_llm_api_key_here
# LLM_API_TIMEOUT=30

# Random Forest API for Malnutrition Assessment (DISABLED)
# RANDOM_FOREST_API_URL=https://your-ml-api.onrender.com
# RANDOM_FOREST_API_KEY=malnutrition-api-key-2025
# RANDOM_FOREST_API_TIMEOUT=30

# ===========================================
# FEATURE FLAGS
# ===========================================
MAIL_VERIFICATION=true

VITE_APP_NAME="${APP_NAME}"
